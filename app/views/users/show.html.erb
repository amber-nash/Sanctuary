<div class="container">
  <div class="user-show-welcome">
    <h5><%=t '.title'%></h5>
    <h6><%=t '.set_contacts'%></h6>
  </div>
  <h5> <i class="material-icons">message</i><%=t '.your_alert_msg'%></h5>
  <blockquote>
    <p>
      <b><%=t '.make_sure'%></b><br>
      <%=t '.only_once'%></p>
  </blockquote>

    <%= render 'users/messageform' %>

    <div class="user-msg">
    <% if @user.alert_msg %>
      <b><%= t '.your_message'%>:</b><br> <%= @user.alert_msg %>
    <% end %>
    </div>

    <h5><i class="material-icons">contacts</i> <%=t '.your_contacts'%></h5>
      <p><%= t '.up_to_five' %><br>
        <%= t '.if_targeted' %><br>
        <%= t '.once_clicked' %></p>

    <div id="contact-list">
      <% @user.contacts.each do |c|%>
        <p class="contact-display">
          <i class="tiny material-icons">phone</i>
          <%= c.nickname %>: <%= c.phone_num %>
        </p>
      <% end %>
    </div>

    <div class="new-contact-button">
      <%= button_to t('.add_contact'), new_contact_path, method: 'get', remote: true, form_class:'get-contact-form waves-effect waves-light btn' %>
    </div>
</div>
